{% extends 'base.html.twig' %}

{% block body %}
    <center>
        <h1>
            Your Orders
        </h1>
        {% if orders %}
            <div>
                {% for order in orders %}    
                <p>
                    Order Id: {{ order.OrderId }} Date ordered: {{ order.DateOrdered|date() }}
                </p>                            
                <table style="border: 1px solid black;">
                    <thead>
                        <tr>
                            <th style="padding: 10px;">
                                Item Name
                            </th>
                            <th style="padding: 10px;">
                                Quantity
                            </th>
                            <th style="padding: 10px;">
                                Price
                            </th>
                        </tr>                        
                    </thead>
                    <tbody>
                        {% for item in order.OrderedItems %}
                            <tr>
                                <td style="padding: 10px; border: 1px solid black;">
                                    {{ item.Item.Fit.FitType }} {{ item.Item.ItemName }}
                                </td>
                                <td style="padding: 10px; border: 1px solid black;">
                                    {{ item.Quantity }}
                                </td>
                                <td style="padding: 10px; border: 1px solid black;">
                                    ${{ item.Price }}
                                </td>
                            </tr>
                        {% endfor %}                        
                    </tbody>
                </table>
                <div>
                    <h2>
                        Total: ${{ order.Total }}
                    </h2>
                </div>
                {% endfor %}
            </div>            
        {% endif %}
    </center>
{% endblock body %}