{% extends 'base.html.twig' %}

{% block body %}
    <center>
        <h1>
            Your Cart
        </h1>
        {% if items %}
            <div>
                <table>
                    <thead>
                        <tr>
                            <th>
                                Item Name
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Price
                            </th>
                        </tr>                        
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>
                                    {{ item.Item.Fit.FitType item.Item.ItemName }}
                                </td>
                                <td>
                                    {{ item.Quantity }}
                                </td>
                                <td>
                                    {{ item.Price }}
                                </td>
                            </tr>
                        {% endfor %}                        
                    </tbody>
                </table>
            </div>            
        {% endif %}
    </center>
{% endblock body %}